<%- include('navbar') -%>   
<div class="page-wrapper">
    <div class="container-fluid">
       
        <div class="row justify-content-center">
            <div id="form-container-login" class="col-lg-6">
                <form method="POST" action="/createContract">
                    <div class="form-group">
                        <h2>Create new contract</h2>
                        <hr>
                    </div>
                    <div class="form-group">
                        <label>contract Number :</label>
                        <input class="form-control" name="numero" placeholder="Enter your contract Number" required/>
                    </div>
                    <div class="form-group">
                        <label>Contract Type :</label>
                        <select class="form-control" name="type">
                            <option value="EMTEELAK"> #EMTEELAK</option>
                            <option value="FEEYZ"> #FEEYZ</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label>Contract duration :</label>
                        <select class="form-control" name="duration">
                            <option value="36"> 36 months</option>
                            <option value="48"> 48 months</option>
                            <option value="60"> 60 months</option>
                        </select>
                    </div>
                    <hr>
                    <div class="form-group">
                        <button type="submit" class="btn waves-effect waves-light btn-rounded btn-info">Create contract</button>
                    </div>
                </form>
            </div>
        </div>
        
    </div>
